[alias]
a = "add ."
b = "branch -v"
bd = "branch -d"
c = "commit -m"
co = "checkout"
cob = "checkout -b"
hist = "log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short"
ignored = "ls-files -v --ignored --exclude-standard"
r = "reset"
s = "status -sb"
st = "status"
unstage = "reset HEAD --"

[color]
ui = "auto"

[color "branch"]
current = "yellow reverse"
local = "yellow"
remote = "green"

[color "diff"]
frag = "magenta bold"
meta = "yellow bold"
new = "green bold"
old = "red bold"
whitespace = "red reverse"

[color "status"]
added = "yellow"
changed = "green"
untracked = "cyan"

[commit]
gpgsign = true

[core]
attributesfile = "~/.gitattributes"
autocrlf = false
defaultBranch = "main"
editor = "micro"
eol = lf
excludesfile = "~/.gitignore"

[diff]
colorMoved = "default"
tool = "micro"

[fetch]
prune = true

[merge]
conflictstyle = "diff3"
tool = "micro"

[pull]
rebase = false

[push]
autoSetupRemote = true
default = "simple"

