root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Batch files require crlf
[*.bat]
end_of_line = crlf

# Checkstyle likes 3 spaces
[*.java]
indent_size = 3

# Do not remove trailing whitespace from markdown
[*.md]
trim_trailing_whitespace = false

# PEP-8 standard
[*.py]
indent_size = 4

# YAML standard
[*.{yaml,yml}]
indent_size = 2

# Makefile requirement
[Makefile]
indent_style = tab
