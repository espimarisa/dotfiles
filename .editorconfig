# Top-most EditorConfig file indicator. Stops searching in parent directories.
root = true

# Default settings for all files unless overridden below.
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Batch files require Windows line endings.
[*.bat]
end_of_line = crlf

# Use 3 spaces for indentation per Checkstyle guidelines.
[*.java]
indent_size = 3

# Do not remove trailing whitespace (important for hard breaks).
[*.md]
trim_trailing_whitespace = false

# Use 4 spaces for indentation (PEP 8 standard).
[*.py]
indent_size = 4

# Use 2 spaces for indentation (common YAML convention).
[*.{yaml,yml}]
indent_size = 2

# Use hard tabs for indentation (Makefile requirement).
[Makefile]
indent_style = tab
