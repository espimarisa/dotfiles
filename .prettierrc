{
	"arrowParens": "always",
	"bracketSameLine": true,
	"bracketSpacing": true,
	"embeddedLanguageFormatting": "auto",
	"endOfLine": "lf",
	"experimentalTernaries": true,
	"htmlWhitespaceSensitivity": "css",
	"jsxSingleQuote": false,
	"objectWrap": "preserve",
	"overrides": [
		{
			"files": ["**/*.jsonc"],
			"options": {
				"trailingComma": "none"
			}
		},
		{
			"files": ["**/*.{yaml,yml}"],
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	],
	"printWidth": 80,
	"proseWrap": "preserve",
	"quoteProps": "consistent",
	"semi": true,
	"singleAttributePerLine": false,
	"singleQuote": false,
	"tabWidth": 4,
	"trailingComma": "all",
	"useTabs": true,
	"vueIndentScriptAndStyle": true
}
