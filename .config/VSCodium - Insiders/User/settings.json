{
    // Emables breadcrumbs, disables code folding, and compact folders
    "breadcrumbs.enabled": true,
    "editor.folding": false,
    "explorer.compactFolders": false,

    // Enables bracket pairing and bracket paring colorization
    "editor.guides.bracketPairs": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.guides.highlightActiveIndentation": true,

    // Suggest selections first; put suggestions to the bottom
    "editor.suggestSelection": "first",
    "editor.snippetSuggestions": "bottom",

    // Indent settings; set tab size to 2 and auto detect settings
    "editor.detectIndentation": false,
    "editor.tabCompletion": "on",
    "editor.tabSize": 2,

    // Enables word wrapping
    "editor.wordWrap": "on",

    // Font settings; use bolder + bigger font and DejaVu Sans
    "editor.fontWeight": 600,
    "editor.fontLigatures": true,
    // "editor.fontFamily": "DejaVu Sans Mono",
    // "terminal.integrated.fontFamily": "'DejaVu Sans Mono', monospace",
    "terminal.integrated.fontSize": 16,

    // Autosave after a short delay
    "files.autoSave": "afterDelay",

    // Format on save
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",

    // Run biome fixes on save; organize imports
    "editor.codeActionsOnSave": {
      "source.organizeImports.biome": "explicit",
      "quickfix.biome": "explicit"
    },

    // Default formatting options
    "files.eol": "\n",
    "files.insertFinalNewline": true,
		"files.trimTrailingWhitespace": true,
    "workbench.iconTheme": "material-icon-theme",

    // Turns off telemetry and annoyances
    "redhat.telemetry.enabled": false,
    "telemetry.telemetryLevel": "off",
    "update.showReleaseNotes": false,
    "workbench.startupEditor": "none",

    // Disables the workspace trust feature
    "security.workspace.trust.enabled": false,

    // Use the new Python language server; enable TS support & auto updates of tools
    "go.toolsManagement.autoUpdate": true,
    "python.languageServer": "Pylance",
    "svelte.enable-ts-plugin": true,

    // Always use relative import paths; do not shorten import paths
    "javascript.preferences.importModuleSpecifierEnding": "js",
    "typescript.preferences.importModuleSpecifier": "relative",

    // Commit all changes when there are no staged ones in Git
    "git.enableSmartCommit": true,

    // Use Ubuntu WSL by default on Windows
    "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",

    // Disable ESLint and Prettier since we use Biome. Enable it per-repo with .vscode/settings.json
    "eslint.enable": false,
    "prettier.enable": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // Enables biome globally
    "biome.enabled": true,

    // Global prettier options, will be overriden by a .prettierrc
    "prettier.arrowParens": "always",
    "prettier.bracketSameLine": true,
    "prettier.bracketSpacing": true,
    "prettier.embeddedLanguageFormatting": "auto",
    "prettier.endOfLine": "lf",
    "prettier.experimentalTernaries": true,
    "prettier.htmlWhitespaceSensitivity": "css",
    "prettier.insertPragma": false,
    "prettier.jsxSingleQuote": false,
    "prettier.printWidth": 120,
    "prettier.proseWrap": "preserve",
    "prettier.quoteProps": "consistent",
    "prettier.semi": true,
    "prettier.singleAttributePerLine": false,
    "prettier.singleQuote": false,
    "prettier.tabWidth": 2,
    "prettier.trailingComma": "all",
    "prettier.useTabs": true,
    "prettier.vueIndentScriptAndStyle": true,

    // Use Biome as a formatter for JS(x), JSON(c), TS(x)
    "[javascript]": {
      "editor.defaultFormatter": "biomejs.biome"
    },
    "[javascriptreact]": {
      "editor.defaultFormatter": "biomejs.biome"
    },
    "[json]": {
      "editor.defaultFormatter": "biomejs.biome"
    },
    "[jsonc]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
      "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescriptreact]": {
      "editor.defaultFormatter": "biomejs.biome"
    },

    // Prefer CodiumInsiders
    "vscord.app.name": "VSCodium",

    // Hides things from explorer
    "files.exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/dist": true,
      "**/public_gen": true,
      "**/.astro": true,
      "**/.turbo": true,
      "**/.svelte-kit": true,
      "**/_site": true,
      "**/.jekyll-cache": true
    },

    // Hides things from search
    "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/dist": true,
      "**/public_gen": true,
      "**/.astro": true,
      "**/.turbo": true,
      "**/.svelte-kit": true,
      "**/_site": true,
      "**/.jekyll-cache": true
    },
  }
