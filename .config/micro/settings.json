{
	"*.java": {
		"tabsize": 3
	},
	"*.py": {
		"tabsize": 4,
		"tabtospaces": true
	},
	"*.yaml": {
		"tabtospaces": true
	},
	"*.yml": {
		"tabsize": 2,
		"tabtospaces": true
