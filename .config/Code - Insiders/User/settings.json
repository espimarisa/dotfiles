{
  "[css][scss]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[dotenv][ignore][properties][shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java",
    "editor.indentSize": 3
  },
  "[javascript][javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "javascript.preferences.importModuleSpecifierEnding": "js"
  },
  "[json][jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "[liquid]": {
    "editor.defaultFormatter": "sissel.shopify-liquid",
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4
  },
  "[sass]": {
    "editor.defaultFormatter": "syler.sass-indented"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[typescript][typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "typescript.preferences.importModuleSpecifier": "project-relative",
    "typescript.preferences.importModuleSpecifierEnding": "js",
    "typescript.preferences.useAliasesForRenames": true
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[yaml]": {
    "editor.tabSize": 2
  },
  "biome.enabled": true,
  "biome.lsp.bin": "~/.bun/bin/biome",
  "biome.requireConfigFile": true,
  "breadcrumbs.enabled": false,
  "editor.codeActionsOnSave": {
    "source.action.useSortedKeys.biome": "explicit",
    "source.addMissingImports.ts": "explicit",
    "source.biome": "explicit",
    "source.fixAll.ts": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "FiraCode Nerd Font Mono",
  "editor.fontLigatures": true,
  "editor.fontWeight": "500",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": true,
  "editor.snippetSuggestions": "bottom",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "textMateRules": [
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },
  "editor.wordWrap": "on",
  "eslint.enable": true,
  "explorer.compactFolders": false,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    ".env*": "dotenv",
    "*.embeddedhtml": "html"
  },
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 5000,
  "files.eol": "\n",
  "files.exclude": {
    "**/.cache": true,
    "**/temp": true,
    "**/tmp": true,
    "**/vendor": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "git.enableSmartCommit": true,
  "go.toolsManagement.autoUpdate": true,
  "html.format.extraLiners": "head, body, /html",
  "html.format.wrapAttributes": "force-aligned",
  "java.format.enabled": true,
  "java.format.settings.url": "https://gist.githubusercontent.com/espimarisa/3daa486f3475d77af94cfef4d310e5ae/raw/1863dbcfec940b9f71a893ba8731137141ac2f47/java-formatter.xml",
  "java.project.referencedLibraries": [
    "/usr/share/java/**/*.jar",
    "lib/**/*.jar"
  ],
  "javascript.updateImportsOnFileMove.enabled": "always",
  "latex-utilities.message.update.show": false,
  "latex-workshop.formatting.latex": "tex-fmt",
  "latex-workshop.formatting.tex-fmt.args": [
    "--indent",
    "--indent-size",
    "--nowrap",
    "2"
  ],
  "liquid.format.rules": {
    "endNewline": true,
    "indentSize": 2,
    "wrap": 80
  },
  "liquid.format.validate": true,
  "prettier.bracketSameLine": true,
  "prettier.experimentalTernaries": true,
  "prettier.quoteProps": "consistent",
  "prettier.singleAttributePerLine": true,
  "prettier.trailingComma": "all",
  "prettier.vueIndentScriptAndStyle": true,
  "prettier.withNodeModules": false,
  "python.experiments.enabled": false,
  "python.languageServer": "Pylance",
  "redhat.telemetry.enabled": false,
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.startupPrompt": "never",
  "shellformat.useEditorConfig": true,
  "svelte.enable-ts-plugin": true,
  "svelte.plugin.css.enable": true,
  "svelte.plugin.html.enable": true,
  "svelte.plugin.typescript.enable": true,
  "telemetry.feedback.enabled": false,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
  "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "update.showReleaseNotes": false,
  "vscord.app.name": "VSCodium",
  "window.commandCenter": false,
  "window.titleBarStyle": "native",
  "workbench.colorTheme": "GitHub Dark",
  "workbench.editor.empty.hint": "hidden",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.layoutControl.enabled": false,
  "workbench.productIconTheme": "material-product-icons",
  "workbench.startupEditor": "none"
}
