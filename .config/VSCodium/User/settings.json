{
	"[dotenv][env]": {
		"editor.defaultFormatter": "socheatsok78-lab.dotenv-vscode-stripped"
	},
	"[jsonc]": {
		"prettier.trailingComma": "none"
	},
	"[markdown][mdx]": {
		"files.trimTrailingWhitespace": false
	},
	"[sass]": {
		"editor.defaultFormatter": "syler.sass-indented"
	},
	"astro.updateImportsOnFileMove.enabled": true,
	"basedpyright.importStrategy": "useBundled",
	"biome.requireConfiguration": true,
	"biome.suggestInstallingGlobally": false,
	"breadcrumbs.enabled": true,
	"chat.agent.enabled": false,
	"chat.commandCenter.enabled": false,
	"chat.edits2.enabled": false,
	"chat.extensionTools.enabled": false,
	"chat.mcp.discovery.enabled": false,
	"chat.mcp.enabled": false,
	"cSpell.checkOnlyEnabledFileTypes": true,
	"cSpell.enabledFileTypes": {
		"*": false,
		"markdown": true,
		"md": true,
		"mdx": true
	},
	"cSpell.userWords": ["Espi", "espimarisa", "espi.me"],
	"dotenv.enableAutocloaking": false,
	"editor.bracketPairColorization.enabled": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.fontFamily": "FiraCode Nerd Font Mono",
	"editor.fontLigatures": true,
	"editor.fontWeight": 500,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.guides.bracketPairs": true,
	"editor.indentSize": "tabSize",
	"editor.linkedEditing": true,
	"editor.minimap.autohide": true,
	"editor.semanticHighlighting.enabled": true,
	"editor.tabCompletion": "onlySnippets",
	"editor.tabSize": 2,
	"editor.wordWrap": "on",
	"emmet.includeLanguages": {
		"njk": "html",
		"nunjucks": "html",
		"postcss": "css"
	},
	"emmet.showSuggestionsAsSnippets": true,
	"emmet.syntaxProfiles": {
		"postcss": "css"
	},
	"errorLens.enabledDiagnosticLevels": ["error", "warning"],
	"explorer.compactFolders": false,
	"extensions.ignoreRecommendations": true,
	"files.associations": {
		"*.env*": "dotenv"
	},
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 5000,
	"files.exclude": {
		"**/_site": true,
		"**/.astro": true,
		"**/.cache": true,
		"**/.DS_Store": true,
		"**/.git": true,
		"**/.hg": true,
		"**/.svn": true,
		"**/.turbo": true,
		"**/dist": true,
		"**/node_modules": true,
		"**/out": true,
		"**/Thumbs.db": true
	},
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"git.autofetch": true,
	"git.enableSmartCommit": true,
	"git.openRepositoryInParentFolders": "always",
	"javascript.preferences.importModuleSpecifier": "relative",
	"javascript.suggest.paths": false,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"latex-utilities.message.update.show": false,
	"latex-workshop.formatting.latex": "tex-fmt",
	"latex-workshop.formatting.tex-fmt.args": [
		"--indent",
		"--indent-size",
		"--nowrap",
		"2"
	],
	"prettier.arrowParens": "always",
	"prettier.bracketSameLine": true,
	"prettier.bracketSpacing": true,
	"prettier.embeddedLanguageFormatting": "auto",
	"prettier.endOfLine": "lf",
	"prettier.experimentalTernaries": true,
	"prettier.htmlWhitespaceSensitivity": "css",
	"prettier.jsxSingleQuote": false,
	"prettier.printWidth": 80,
	"prettier.proseWrap": "preserve",
	"prettier.quoteProps": "consistent",
	"prettier.semi": true,
	"prettier.singleAttributePerLine": false,
	"prettier.singleQuote": false,
	"prettier.tabWidth": 2,
	"prettier.trailingComma": "all",
	"prettier.useTabs": true,
	"prettier.vueIndentScriptAndStyle": true,
	"redhat.telemetry.enabled": false,
	"security.workspace.trust.enabled": false,
	"svelte.enable-ts-plugin": true,
	"tailwindCSS.emmetCompletions": true,
	"telemetry.feedback.enabled": false,
	"telemetry.telemetryLevel": "off",
	"terminal.integrated.defaultProfile.linux": "zsh",
	"terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
	"typescript.preferences.importModuleSpecifier": "relative",
	"typescript.preferences.importModuleSpecifierEnding": "auto",
	"typescript.preferences.useAliasesForRenames": false,
	"typescript.suggest.paths": false,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnPaste.enabled": true,
	"update.showReleaseNotes": false,
	"versionlens.suggestions.showOnStartup": true,
	"vscord.app.name": "VSCodium",
	"vscord.status.idle.check": false,
	"window.commandCenter": false,
	"window.menuBarVisibility": "toggle",
	"window.titleBarStyle": "native",
	"workbench.colorTheme": "GitHub Dark",
	"workbench.editor.empty.hint": "hidden",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.layoutControl.enabled": false,
	"workbench.panel.showLabels": false,
	"workbench.productIconTheme": "material-product-icons",
	"workbench.startupEditor": "none",
	"workbench.tips.enabled": false,
	"window.customTitleBarVisibility": "never"
}
