{
	"[astro]": {
		"editor.defaultFormatter": "astro-build.astro-vscode"
	},
	"[dotenv][env]": {
		"editor.defaultFormatter": "socheatsok78-lab.dotenv-vscode-stripped"
	},
	"[liquid]": {
		"editor.defaultFormatter": "Shopify.theme-check-vscode",
		"editor.formatOnType": true
	},
	"[markdown][mdx]": {
		"files.trimTrailingWhitespace": false
	},
	"[sass]": {
		"editor.defaultFormatter": "syler.sass-indented"
	},
	"[shellscript][dockerfile]": {
		"editor.defaultFormatter": "mkhl.shfmt"
	},
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"astro.updateImportsOnFileMove.enabled": true,
	"biome.enabled": true,
	"biome.lsp.bin": "~/.bun/bin/biome",
	"biome.requireConfiguration": true,
	"biome.suggestInstallingGlobally": false,
	"breadcrumbs.enabled": false,
	"cSpell.checkOnlyEnabledFileTypes": true,
	"cSpell.enabledFileTypes": {
		"*": false,
		"markdown": true,
		"mdx": true
	},
	"cSpell.userWords": ["Espi", "espimarisa"],
	"css.lint.unknownAtRules": "ignore",
	"dart.updateImportsOnRename": true,
	"database-client.autoSync": true,
	"database-client.telemetry.usesOnlineServices": false,
	"docker.extension.enableComposeLanguageServer": true,
	"docker.lsp.telemetry": "off",
	"dotenv.enableAutocloaking": false,
	"editor.bracketPairColorization.enabled": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.fontFamily": "FiraCode Nerd Font Mono",
	"editor.fontLigatures": true,
	"editor.fontWeight": 500,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.guides.bracketPairs": true,
	"editor.indentSize": "tabSize",
	"editor.inlineSuggest.enabled": true,
	"editor.linkedEditing": true,
	"editor.minimap.autohide": true,
	"editor.semanticHighlighting.enabled": true,
	"editor.tabCompletion": "off",
	"editor.tabSize": 4,
	"editor.tokenColorCustomizations": {
		"textMateRules": []
	},
	"editor.wordWrap": "on",
	"errorLens.enabledDiagnosticLevels": ["error", "warning"],
	"eslint.enable": true,
	"explorer.compactFolders": false,
	"extensions.ignoreRecommendations": false,
	"files.associations": {
		"*.dbclient-js": "javascript",
		"*.env*": "dotenv"
	},
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 5000,
	"files.exclude": {
		"**/_site": true,
		"**/.astro": true,
		"**/.cache": true,
		"**/.DS_Store": true,
		"**/.git": true,
		"**/.hg": true,
		"**/.jekyll-cache": true,
		"**/.ruby-lsp": true,
		"**/.svelte-kit": true,
		"**/.svn": true,
		"**/.turbo": true,
		"**/CVS": true,
		"**/dist": true,
		"**/node_modules": true,
		"**/Thumbs.db": true
	},
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"git.autofetch": true,
	"git.enableSmartCommit": true,
	"git.openRepositoryInParentFolders": "always",
	"html.autoClosingTags": true,
	"javascript.autoClosingTags": true,
	"javascript.preferences.importModuleSpecifier": "relative",
	"javascript.preferences.importModuleSpecifierEnding": "auto",
	"javascript.suggest.paths": false,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"javascript.updateImportsOnPaste.enabled": true,
	"latex-utilities.message.update.show": false,
	"latex-workshop.formatting.latex": "tex-fmt",
	"latex-workshop.formatting.tex-fmt.args": [
		"--indent",
		"--indent-size",
		"--nowrap",
		"4"
	],
	"markdown.updateLinksOnFileMove.enabled": "always",
	"prettier.arrowParens": "always",
	"prettier.bracketSameLine": true,
	"prettier.bracketSpacing": true,
	"prettier.embeddedLanguageFormatting": "auto",
	"prettier.enable": true,
	"prettier.endOfLine": "lf",
	"prettier.experimentalTernaries": true,
	"prettier.htmlWhitespaceSensitivity": "css",
	"prettier.jsxSingleQuote": false,
	"prettier.printWidth": 80,
	"prettier.proseWrap": "preserve",
	"prettier.quoteProps": "consistent",
	"prettier.semi": true,
	"prettier.singleAttributePerLine": false,
	"prettier.singleQuote": false,
	"prettier.tabWidth": 4,
	"prettier.trailingComma": "all",
	"prettier.useEditorConfig": true,
	"prettier.useTabs": true,
	"prettier.vueIndentScriptAndStyle": true,
	"prettier.withNodeModules": false,
	"python.experiments.enabled": false,
	"python.languageServer": "Pylance",
	"redhat.telemetry.enabled": false,
	"scss.lint.unknownAtRules": "ignore",
	"security.workspace.trust.banner": "never",
	"security.workspace.trust.enabled": false,
	"security.workspace.trust.startupPrompt": "never",
	"svelte.enable-ts-plugin": true,
	"svelte.plugin.css.enable": true,
	"svelte.plugin.html.enable": true,
	"tailwindCSS.emmetCompletions": true,
	"telemetry.feedback.enabled": false,
	"telemetry.telemetryLevel": "off",
	"terminal.integrated.defaultProfile.linux": "zsh",
	"terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
	"typescript.autoClosingTags": true,
	"typescript.preferences.importModuleSpecifier": "relative",
	"typescript.preferences.importModuleSpecifierEnding": "auto",
	"typescript.preferences.useAliasesForRenames": false,
	"typescript.suggest.paths": false,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnPaste.enabled": true,
	"update.mode": "manual",
	"update.showReleaseNotes": false,
	"versionlens.suggestions.showOnStartup": true,
	"vscord.app.name": "VSCodium",
	"window.autoDetectColorScheme": true,
	"window.commandCenter": false,
	"window.titleBarStyle": "native",
	"workbench.editor.empty.hint": "hidden",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.layoutControl.enabled": false,
	"workbench.preferredDarkColorTheme": "GitHub Dark",
	"workbench.productIconTheme": "material-product-icons",
	"workbench.startupEditor": "none",
	"xml.completion.autoCloseTags": true
}
